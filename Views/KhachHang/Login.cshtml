@{
	ViewData["Title"] = "Login";
}
@model ThuongMaiDienTu.ViewModel.LoginVm
<div class="container-fluid">
	<div class="row px-xl-9">
		<div class="col-lg-8">
			<h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Login</span></h5>
			<div class="bg-light p-30 mb-5">
				<form asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl">
					<div class="text-danger" asp-validation-summary="All"></div>
					<div class="row">
						<div class="col-md-12 form-group">
							<label asp-for="@Model.username"></label>
							<input class="form-control" asp-for="@Model.username">
							<span asp-validation-for="@Model.username" class="text-danger"></span>
						</div>
						<div class="col-md-12 form-group">
							<label asp-for="@Model.password"></label>
							<input class="form-control" asp-for="@Model.password">
							<span asp-validation-for="@Model.password" class="text-danger"></span>
						</div>
						<button type="submit" class="btn btn-block btn-primary font-weight-bold py-3">Login</button>
						<a class="col-md-12 ">Quên mật khẩu ?</a>
						</div>

				</form>

			</div>
		</div>

	</div>
</div>